<div class="container">
    <div class="row">
        <div class="col-md-12 align-items-center">
            <h1>Eat Da Burger!</h1>
            <br>
            <img id="burger-img" src="../assets/images/hugeBurger.png" alt="Burger">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6" id="available">
            <h2>Burgers Available to Eat:</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}.
                    {{this.burger_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                        <button class="btn btn-warning" type="submit">Eat Me Now!</button>
                    </form>

                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6" id="devoured">
            <h2>Burgers That Have <br>Been Devoured: </h2>

            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    {{this.id}}.
                    {{this.burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

        <div id="add">
            <h2>Add a Burger: </h2>
            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <label for="dab">Burger Name:</label>
                    <input type="text" id="dab" name="burger_name">
                </div>
                <button class="btn btn-danger" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>